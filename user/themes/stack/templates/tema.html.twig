{% extends 'dalys/baze.html.twig' %}
{% set tags = page.taxonomy.tag %}
{% if tags %}
    {% set progress = page.collection({'items':{'@taxonomy':{'kategorija': 'diktantai', 'tag': tags}},'order': {'by': 'default', 'dir': 'asc'}}) %}
{% else %}
    {% set progress = page.collection({'items':{'@taxonomy':{'kategorija': 'diktantai'}},'order': {'by': 'default', 'dir': 'asc'}}) %}
{% endif %}

{# jei diktantai, tai antraštėje rodomi žodžių ir sakinių skaičiai #}
{% if page.url|split("/")[1] == 'diktantai' %}
  {% set zodziu = content|split(' ')|length %}
  {% set sakiniu = content|split('. ')|length + (content|split('! ')|length - 1) + (content|split('? ')|length - 1) %}
  {% set tekstas = "Žodžių: " ~ zodziu ~ ", sakinių: " ~ sakiniu %}
{% else %}
  {% if page.content %}
    {% set tekstas = page.content|striptags %}
  {% endif %}
{% endif %}

{% block navigacija %}
  {% if not (grav.uri.param('be-meniu')) and not (config.site.hidesidebaronblogpages.enabled) and not (page.parent.header.hide_sidebar) %}
    {% include 'dalys/meniu-soninis.html.twig' %}
  {% endif %}
{% endblock %}

{% block turinys %}
  {# antraštė. stiliai: light, medium, dark, primary, image; dydis: sm, md, lg; #}
  {% include 'elementai/title-section-1.html.twig' with {stilius: 'light', dydis: 'sm', lead: tekstas} %}
  
  {% include 'dalys/diktantai-pamoka.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% do assets.addJs('theme://js/howler.core.min.js', {'priority':115, 'group':'bottom'}) %}
{% endblock %}

{% block skriptas %}
    <script>
            {% include 'dalys/diktantai-js.html.twig' %}
    
</script>
{% endblock %}