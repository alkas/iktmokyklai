{% set iliustracija = page.media.images|first %}

{% if not truncate %}
	
<article>
	<div class="article__title text-center">
			<h1 class="h2">{{ page.title }}</h1>
			<span>May 2nd 2016 in </span>
			<span>
					<a href="#">Web Design</a>
			</span>
	</div>
	<!--end article title-->
	<div class="article__body">
			<iframe src="{{ header.google_adresas }}" frameborder="0" width="100%" height="580" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true"></iframe>
			{{ page.content }}

	</div>
	<div class="article__share text-center">
			<a class="btn bg--facebook btn--icon" href="#">
					<span class="btn__text">
							<i class="socicon socicon-facebook"></i>
							Share on Facebook
					</span>
			</a>
			<a class="btn bg--twitter btn--icon" href="#">
					<span class="btn__text">
							<i class="socicon socicon-twitter"></i>
							Share on Twitter
					</span>
			</a>
	</div>
</article>

  
  
{% else %}  
  
  <div class="masonry__item col-md-6 text-center" data-masonry-filter="Šviesus,tamsus">
  	<div class="project-thumb">
    	<a href="{{ page.url }}">
      	<img alt="{{ page.title }} šablono iliustracija" class="border--round" src="{{ iliustracija.url }}" title="{{ page.title }} šablono iliustracija" />
      	{#{ iliustracija.html('šablono iliustracija', 'šablono iliustracija', 'border--round') }#}
    	</a>
  	  <h4>{{ page.title }}</h4>
      <span></span>
    </div>
  </div>
  <!--end item-->
  
{% endif %}